<div class="card">
    <div class="card-header row col-12">
        <h2 class="col-6">{{title}}</h2>
        <p class="col-6">posted by {{user.username}} on {{date_created}}</p>
    </div>
    <div class="card-body">
        <p class="card-text">{{description}}</p>
    </div>
    <a href='/dashboard/edit/{{id}}' class="edit-post-btn col-6">Edit</a>
</div>

<script type="text/javascript" src="/js/edit.js"></script>
